@page "{handler?}"
@model Web.Pages.Categoria.CreateEdit

@{
    Layout = "_Layout";
    string action = Model.Categoria?.Id > 0 ? "Editar" : "Criar";
    ViewData["Title"] = $"{action} Categoria";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input hidden="hidden" asp-for="Categoria.Id" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Nome" class="form-label"></label>
                <input asp-for="Categoria.Nome" class="form-control"/>
                <span asp-validation-for="Categoria.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Descricao" class="form-label"></label>
                <input asp-for="Categoria.Descricao" class="form-control"/>
                <span asp-validation-for="Categoria.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary"/>
            </div>
        </form>

        <div>
            @foreach (var error in Model.Errors)
            {
                <p class="text-danger">@error</p>
            }
        </div>
    </div>
</div>