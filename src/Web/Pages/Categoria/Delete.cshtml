@page "{id:int}"
@model Web.Pages.Categoria.Delete

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Categoria</h4>
    <hr/>

    @if (Model.Categoria is not null)
    {
        <dl class="dl-horizontal">
            <dt>
                <label asp-for="Categoria.Id"></label>
            </dt>
            <dd>
                @Model.Categoria.Id
            </dd>
            <dt>
                <label asp-for="Categoria.Nome"></label>
            </dt>
            <dd>
                @Model.Categoria.Nome
            </dd>
            <dt>
                <label asp-for="Categoria.Descricao"></label>
            </dt>
            <dd>
                @Model.Categoria.Descricao
            </dd>
        </dl>
    }
    else
    {
        <p>Nenhuma categoria encontrada.</p>
    }
</div>

<div>
    @foreach (var error in Model.Errors)
    {
        <p class="text-danger">@error</p>
    }
</div>

<div>
    @if (Model.Categoria is not null)
    {
        <form method="post">
            <input type="hidden" asp-for="Categoria.Id"/>
            <input type="submit" value="Excluir"/>
        </form>
    }
    <a asp-page="Index">Voltar</a>
</div>