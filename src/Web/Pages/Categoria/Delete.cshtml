@page "{id:int}"
@model Web.Pages.Categoria.Delete

@{
    Layout = "_Layout";
    ViewData["Title"] = "Excluir";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Categoria</h4>
    </div>
    <div class="card-body">
        @if (Model.Categoria is not null)
        {
            <dl class="row">
                <dt class="col-sm-3">
                    <label asp-for="Categoria.Id" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Categoria.Id
                </dd>
                <dt class="col-sm-3">
                    <label asp-for="Categoria.Nome" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Categoria.Nome
                </dd>
                <dt class="col-sm-3">
                    <label asp-for="Categoria.Descricao" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Categoria.Descricao
                </dd>
            </dl>
        }
        else
        {
            <p>Nenhuma categoria encontrada.</p>
        }
    </div>
</div>

<div class="mt-3">
    @foreach (var error in Model.Errors)
    {
        <p class="text-danger">@error</p>
    }
</div>

<div class="mt-3 d-flex align-items-center">
    @if (Model.Categoria is not null)
    {
        <form method="post" class="mr-2">
            <input type="hidden" asp-for="Categoria.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    }
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</div>