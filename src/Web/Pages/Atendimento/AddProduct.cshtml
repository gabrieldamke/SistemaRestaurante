@page "{id:int?}"
@model Web.Pages.Atendimento.AddProduct

@{
    Layout = "_Layout";
    ViewData["Title"] = $"Adicionar Produto";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-5">
    <form method="post">
        <div class="form-group">
            <input hidden="hidden" asp-for="Atendimento.Id"/>
        </div>
        <div class="form-group">
            <label asp-for="AtendimentoProduto.Quantidade" class="form-label"></label>
            <input asp-for="AtendimentoProduto.Quantidade" class="form-control"/>
            <span asp-validation-for="AtendimentoProduto.Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AtendimentoProduto.ProdutoId" class="form-label"></label>
            <select asp-for="AtendimentoProduto.ProdutoId" asp-items="Model.Produtos" class="form-select"></select>
            <span asp-validation-for="AtendimentoProduto.ProdutoId" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>

