@model Web.Model.PageViewModel

<nav>
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Page(nameof(Index), new { pageIndex = Model.PageIndex - 1 })">&laquo;</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" href="@Url.Page(nameof(Index), new { pageIndex = i })">@i</a>
            </li>
        }

        @if (Model.HasNextPage)
        {
            <li class="page-item">
                <a class="page-link" href="@Url.Page(nameof(Index), new { pageIndex = Model.PageIndex + 1 })">&raquo;</a>
            </li>
        }
    </ul>
</nav>