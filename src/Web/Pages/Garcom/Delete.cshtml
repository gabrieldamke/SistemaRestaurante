
@page "{id:int}"
@model Web.Pages.Garcom.Delete

@{
Layout = "_Layout";
ViewData["Title"] = "Excluir";
}

<h2>@ViewData["Title"]</h2>
<div class="card">
    <div class="card-header">
        <h4 class="card-title">Garçom</h4>
    </div>
    <div class="card-body">
        @if (Model.Garcom is not null)
        {
            <dl class="row">
                <dt class="col-sm-3">
                    <label asp-for="Garcom.Id" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Garcom.Id
                </dd>
                <dt class="col-sm-3">
                    <label asp-for="Garcom.Nome" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Garcom.Nome @Model.Garcom.Sobrenome
                </dd>
                <dt class="col-sm-3">
                    <label asp-for="Garcom.NumeroTelefone" class="form-label"></label>
                </dt>
                <dd class="col-sm-9">
                    @Model.Garcom.NumeroTelefone
                </dd>
            </dl>
        }
        else
        {
            <p>Nenhum garçom encontrado.</p>
        }
    </div>
</div>
<div class="mt-3">
    @foreach (var error in Model.Errors)
    {
        <p class="text-danger">@error</p>
    }
</div>
<div class="mt-3 d-flex align-items-center">
    @if (Model.Garcom is not null)
    {
        <form method="post" class="mr-2">
            <input type="hidden" asp-for="Garcom.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
        </form>
    }
    <a asp-page="Index" class="btn btn-secondary">Voltar</a>
</div>