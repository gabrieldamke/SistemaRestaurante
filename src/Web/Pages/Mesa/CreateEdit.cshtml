@page "{handler?}"
@model Web.Pages.Mesa.CreateEdit

@{
    Layout = "_Layout";
    string action = Model.Mesa?.Id > 0 ? "Editar" : "Criar";
    ViewData["Title"] = $"{action} Mesa";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form method="post">
        <div class="form-group">
            <input hidden="hidden" asp-for="Mesa.Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Mesa.Numero" class="control-label"></label>
            <input asp-for="Mesa.Numero" class="form-control" />
            <span asp-validation-for="Mesa.Numero" class="text-danger"></span>
        </div>
        <div class="form-group">
            Hora de Abertura
            <input asp-for="Mesa.HoraAbertura" class="form-control" />
            <span asp-validation-for="Mesa.HoraAbertura" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Mesa.Status" class="control-label"></label>
            <select asp-for="Mesa.Status" asp-items="Model.Status" class="form-control"></select>
            <span asp-validation-for="Mesa.Status" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
    
    <div>
        @foreach (var error in Model.Errors)
        {
            <p class="text-danger">@error</p>
        }
    </div>
</div>